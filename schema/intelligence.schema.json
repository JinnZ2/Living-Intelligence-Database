{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://jinnz2.github.io/Living-Intelligence-Database/schema/intelligence.schema.json",
  "title": "Living Intelligence Node",
  "type": "object",
  "required": ["id", "kind", "label"],
  "properties": {
    "id": { "type": "string", "pattern": "^[A-Z0-9_]+$" },
    "kind": {
      "type": "string",
      "enum": ["ANIMAL", "PLANT", "CRYSTAL", "PLASMA", "ENERGY", "SHAPE"]
    },
    "label": { "type": "string", "minLength": 1 },
    "attributes": {
      "type": "object",
      "description": "Freeform but structured where possible.",
      "properties": {
        "pattern": { "type": "string" },
        "domain": { "type": "string" },
        "geometry": { "type": "string" },
        "frequency": { "type": ["number", "string"] },
        "resonance": { "type": ["number", "string"] },
        "constraints": {
          "type": "object",
          "description": "Constants/temporal/protocol hints live here (keeps repo to the 6 kinds).",
          "properties": {
            "phi": { "type": ["number", "string"] },
            "tau": { "type": ["number", "string"] },
            "temporal": { "type": "string" },
            "protocols": {
              "type": "array",
              "items": { "type": "string" }
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["rel", "to"],
        "properties": {
          "rel": { "type": "string" },
          "to": { "type": "string" }
        }
      }
    },
    "meta": {
      "type": "object",
      "properties": {
        "source": { "type": "string" },
        "notes": { "type": "string" }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
