{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Plasma Intelligence Schema",
  "type": "object",
  "required": ["id", "name", "ontology", "attributes"],
  "properties": {
    "id": {"type": "string"},
    "emoji": {"type": "string"},
    "name": {"type": "string"},
    "ontology": {"const": "plasma"},
    "symbolic_code": {"type": "string"},
    "attributes": {
      "type": "object",
      "properties": {
        "pattern": {"type": "string"},
        "energy_state": {"type": "string"}
      },
      "required": ["pattern"]
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["rel", "to"],
        "properties": {
          "rel": {"type": "string"},
          "to": {"type": "string"}
        }
      }
    }
  }
}
